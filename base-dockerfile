FROM node:22-slim

RUN apt-get update && apt-get install -y \
    git \
    curl \
    sudo \
    openssh-client \
    && rm -rf /var/lib/apt/lists/*

RUN npm install -g npm@latest

WORKDIR /workspace

RUN usermod -s /bin/bash node && \
    echo "node ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

USER node
